<picker-view class="single-picker-view"
             indicator-style="opacity: 0; background: transparent; border: none; box-shadow: none;"
             mask-style="background: transparent;"
             style="width: {{width}}; height: {{height}};"
             value="{{value}}"
             bindchange="onPickerChange">
    <picker-view-column>
        <view wx:for="{{items}}" wx:key="index"
              class="picker-item"
              style="line-height: {{lineHeight}}; font-size: {{fontSize}};">
            {{item}}
        </view>
    </picker-view-column>
</picker-view>

.single-picker-view {
    display: inline-block;
    vertical-align: middle;
    /* 宽度和高度由外部传入的 style 进行控制 */
}

.picker-item {
    text-align: center;
    /* 背景渐变文本，保持不变 */
    background: linear-gradient(45deg, #ee7e0f, #fa9206, #FFD700, #FFC107, #FFECB3);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

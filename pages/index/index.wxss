/* 背景渐变保持不变 */
.container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 32rpx;
    background: linear-gradient(to right, #FF8C00, #FFFACD);
}

/* 毛玻璃效果的框，不再显示边界线 */
.text-frame {
    padding: 24rpx;
    border-radius: 20rpx;
    background: rgba(255, 255, 255, 0.3);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    /* 删除边界线条 */
    /* border: 1px solid rgba(255, 255, 255, 0.5); */
    display: flex;
    flex-direction: column;
    align-items: center;
}

.sentence {
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 每行文本 */
.sentence-line {
    display: flex;
    align-items: center;
    margin: 4rpx 0;
}

.sentence-text {
    margin: 0 8rpx;
}

/* 缩小左右间距，使每个滚动组件刚好能容纳文字 */
.inline-picker {
    display: inline-block;
    margin: 0 2rpx;
}

/* 按钮样式保持原有效果 */
.decide-btn {
    width: 320rpx;
    height: 80rpx;
    background-color: #007aff;
    border: none;
    border-radius: 40rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s ease;
}

.decide-btn:active {
    background-color: #005bb5;
}

/* 渐变文字效果 */
.gradient-text {
    background: linear-gradient(to right, #FFFACD, #FF8C00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}
